extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main
  .container.my-3
    .row
      .col-12
        +box-head("Danh sách sản phẩm")
  
  .container-fluid
    .row
      each item in products
        .col-3.mb-3
          .product-list
            .product-item
              img(src=item.thumbnail, alt=item.title)
              h3.product-name #{item.title}
              .discount-badge #{item.discountPercentage}%
              .product-price
                  span.original-price #{item.priceNew}₫
                  span.discount-price #{item.price}₫
              button.buy-button Mua ngay
    //- Thêm các sản phẩm khác tương tự
