extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
    +alert-success(3000)
    +alert-error(3000)
    .container-user.mt-5.mb-5
        h2 Đăng ký tài khoản
        form(
            action="/user/register"
            method="POST"
        )
            label(for='fullName') Tên người dùng
            input(
                type='text' 
                name='fullName' 
                id='fullName' 
                placeholder='Nhập tên người dùng' 
                required
            )
            label(for='email') Email
            input(
                type='email' 
                name='email' 
                id='email' 
                placeholder='Nhập email' 
                required
            )
            label(for='email') Số điện thoại
            input(
                type='text' 
                name='phone' 
                id='phone' 
                placeholder='Nhập số điện thoại' 
                required
            )
            label(for='password') Mật khẩu
            input(
                type='password' 
                name='password' 
                id='password' 
                placeholder='Nhập mật khẩu' 
                required
            )
            label(for='password') Xác nhận lại mật khẩu
            input(
                type='password' 
                name='confirmPassword' 
                id='confirmPassword' 
                placeholder='Nhập mật khẩu' 
                required
            )
            button(type='submit') Đăng ký