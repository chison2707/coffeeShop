extends ../../layouts/default.pug

block main 
    .order-success-container
        h2 Đặt hàng thành công!
        p Cảm ơn bạn đã đặt hàng! Đơn hàng của bạn đang được xử lý
        .personal-info
            h2 Thông tin cá nhân
            p
                strong Tên khách hàng:
                |   #{order.userInfor.fullName}
            p
                strong Địa chỉ:
                |  #{order.userInfor.address}
            p
                strong Số điện thoại:
                |  #{order.userInfor.phone}
        .order-info
            h2 Thông tin đơn hàng
        if(order.products.length > 0)
            each item in order.products
                .order-item
                    img(
                        src=item.productInfo.thumbnail 
                        alt=item.productInfo.title
                    )
                    .item-details
                    p
                        strong Sản phẩm:
                        |  #{item.productInfo.title}
                    p
                        strong Giá:
                        |  #{Number(item.priceNew).toLocaleString('vi-VN')}đ
                    p
                        strong Số lượng:
                        |  #{item.quantity}
                    p
                        strong Tổng tiền:
                        |  #{Number(item.totalPrice).toLocaleString('vi-VN')}đ
        .order-total
            p
                strong Tổng tiền:
                |  #{Number(order.totalPrice).toLocaleString('vi-VN')}đ
        a.back-home-button(href='/') Quay lại trang chủ