mixin product-item(item)
    .col-3.mb-3
          .product-list
            a(href=`/products/detail/${item.slug}`).product-item
              img(src=item.thumbnail, alt=item.title)
              if(item.featured == "1")
                .inner-featured Nổi bật
              h3.product-name #{item.title}
              .discount-badge -#{item.discountPercentage}%
              .product-price
                  span.original-price #{item.price.toLocaleString("vi-VN")}₫
                  span.discount-price #{Number(item.priceNew).toLocaleString('vi-VN')}₫
              .sold-badge Đã bán: #{item.sold}
              button.buy-button Mua ngay