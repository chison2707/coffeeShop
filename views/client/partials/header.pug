include ../mixins/sub-menu.pug

header
  .container
    .logo
      a(href="/")
        img(src="/images/logo.png", alt="Logo")
    .search-bar
      form(
        action="/search"
        method="GET"
      ) 
        input(
          type='text'
          placeholder='Tìm kiếm sản phẩm...'
          name="keyword"
          value=keyword
        )
        button(
          type='submit'
        ) 
          i.fas.fa-search
    nav.main-menu
      ul
        li
          a(href='/') Trang chủ
        li(class="sub-menu")
          - const pathProduct = "/products";            
          a.headerTitle(href=pathProduct) Sản phẩm
          +sub-menu(layoutProductsCategory,pathProduct)
    .icons
      a(href='/cart')
        i.fas.fa-shopping-cart (#{minicart ? minicart.totalQuantity : 0})
    nav.main-menu.ml-1
      ul
        li 
          a(href='/user/login') Đăng nhập 
        li 
          a(href='/user/register') Đăng ký


