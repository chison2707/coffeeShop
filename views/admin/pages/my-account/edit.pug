extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(5000)
    +alert-error(5000)
    h1(class="mb-4") Cập nhật thông tin cá nhân

    form(
            action=`${prefixAdmin}/my-account/edit?_method=PATCH` 
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="fullName") Họ tên *
                input(
                    class="form-control" 
                    type="text" 
                    id="fullName"
                    name="fullName" 
                    required
                    value=user.fullName
                )

            div(class="form-group")
                label(for="email") Email *
                input(
                    class="form-control" 
                    type="email" 
                    id="email"
                    name="email" 
                    value=user.email
                )
            div(class="form-group")
                label(for="password") Mật khẩu
                input(
                    type="password" 
                    class="form-control" 
                    id="password" 
                    name="password" 
                )

            div(class="form-group")
                label(for="phone") Số điện thoại
                input(
                    type="text" 
                    class="form-control" 
                    id="phone" 
                    name="phone" 
                    value=user.phone 
                    min="0"
                )
           
            div(
                class="form-group"
                upload-image
                )
                label(for="avatar") Ảnh
                input(
                    type="file" 
                    class="form-control-file" 
                    id="avatar" 
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
                div(class="image-container")
                    img(
                        src=user.avatar
                        upload-image-preview
                        class="image-preview"
                    )
                    button(
                        class="close-btn"
                        removeImage
                    ) x
           
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập nhật