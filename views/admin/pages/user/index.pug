extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(3000)
    h1(class="mb-4") Danh sách tài khoản khách hàng
    .card.mb-3
        .card-header Danh sách
            .card-body
            table(
                    class=" table table-hover table-sm"
                )
                    thead
                        tr
                            th STT
                            th Avatar
                            th Họ tên
                            th Email
                            th Số điện thoại
                            th Trạng thái
                            th Hành động
                    tbody 
                        each item, index in userClient
                            tr
                                td #{index +1}
                                td
                                    img(src=item.avatar 
                                        alt=item.fullName
                                        width="100px" 
                                        height="70px")
                                td #{item.fullName}
                                td #{item.email}
                                td #{item.phone}
                                td
                                    if(item.status == "active")
                                        a(
                                            href="javascript:;" 
                                            data-status=item.status
                                            data-id = item.id 
                                            button-change-status
                                            class="badge badge-success"
                                        ) Hoạt động
                                    else 
                                        a(
                                            href="javascript:;" 
                                            data-status=item.status
                                            data-id = item.id 
                                            button-change-status
                                            class="badge badge-danger"
                                        ) Dừng hoạt động
                                td
                                    a(
                                        href= `${prefixAdmin}/user/detail/${item.id}`
                                        class="btn btn-secondary btn-sm"
                                    ) Chi tiết
                                    button(
                                        class="btn btn-danger btn-sm ml-1"
                                        button-delete
                                        data-id = item.id
                                    ) Xóa

    form(
            action=""
            method="POST"
            id="form-change-status"
            data-path=`${prefixAdmin}/user/change-status`
        )
    form(
        action=""
        method="POST"
        id="form-delete-item"
        data-path=`${prefixAdmin}/user/delete`
    )
    script(src="/admin/js/user.js") 