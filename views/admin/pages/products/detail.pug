extends ../../layouts/default.pug

block main 
    if(role.permissions.includes("products_view"))
        if product.title
            h1.mb-4 #{product.title}
        if product.price
            div.mb-4 Giá: <b> #{product.price}$</b>
        if product.discountPercentage
            div.mb-4 Giảm giá: <b> #{product.discountPercentage}%</b>
        if product.stock
            div.mb-4 Còn lại: <b> #{product.stock}</b>
        if product.thumbnail
            div.mb-4
                img(src=product.thumbnail style="width: 100px")
        if product.status
            div.mb-4
                span Trạng thái:
                if product.status === "active"
                    span(class="badge badge-success") Hoạt động
                else
                    span(class="badge badge-danger") Dừng hoạt động

        if product.position
            div.mb-4 Vị trí: b #{product.position}

        if product.description
            div.mb-4 !{product.description}
        a(
            href=`${prefixAdmin}/products/edit/${product.id}`
            class="btn btn-warning"
        ) Chỉnh sửa


    script(src="/admin/js.product.js") 